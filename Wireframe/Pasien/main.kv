<LoginScreen>: # Tampilan Login Pasien !!
    username: username
    password: password
    
    BoxLayout:
        orientation: 'vertical'

        # Header with back button
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70
            padding: [10, 10]
            
            Button:
                size_hint_x: None
                width: 50
                background_normal: ''
                background_color: 1, 1, 1, 0  # Transparan
                on_press: root.go_back()

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Warna putih
                    Ellipse:
                        pos: self.x - 2, self.center_y - self.width / 2 - 2
                        size: self.width + 4, self.width + 4  # Lingkaran

                Image:
                    source: 'Image/ButtonBack.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: 28, 28

            Widget:  # Spacer
                size_hint_x: 1

        # Main content
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: 'vertical'
                padding: [20, 20, 20, 20]
                spacing: 20
                size_hint_y: None
                height: 500

                Image:
                    source: 'gambar.png'  # Ganti dengan path gambar Anda
                    size_hint: None, None
                    size: 250, 250
                    color: 0.15, 0.15, 0.15, 0.15
                    pos_hint: {'center_x': 0.5}

                Label:
                    text: 'Login'
                    font_size: '40sp'
                    color: 0.3, 0.3, 0.3, 1
                    size_hint_y: None
                    height: 45
                    pos_hint: {'center_x': 0.5}
                    halign: 'left'

                Label:
                    text: 'Lorem ipsum dolor sit amet'
                    font_size: '16sp'
                    color: 0.5, 0.5, 0.5, 0.7
                    size_hint_y: None
                    height: 45
                    pos_hint: {'center_x': 0.5}

                Widget:
                    size_hint_y: None
                    height: 40

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 15
                    size_hint_y: None
                    height: 150

                    TextInput:
                        id: username
                        hint_text: 'Username'
                        multiline: False
                        size_hint: 0.8, None
                        height: 45
                        padding: [20, 10, 20, 10]
                        background_color: 0.9, 0.9, 0.9, 1
                        background_normal: ''
                        cursor_color: 0.3, 0.3, 0.3, 1
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: password
                        hint_text: 'Password'
                        multiline: False
                        password: True
                        size_hint: 0.8, None
                        height: 45
                        padding: [20, 10, 20, 10]
                        background_color: 0.9, 0.9, 0.9, 1
                        background_normal: ''
                        cursor_color: 0.3, 0.3, 0.3, 1
                        pos_hint: {'center_x': 0.5}

                    Widget:
                        size_hint_y: None
                        height: 30

                    Button:
                        text: 'Login'
                        size_hint: 0.8, None
                        height: 45
                        background_color: 0.7, 0.7, 0.7, 1
                        background_normal: ''
                        pos_hint: {'center_x': 0.5}
                        on_press: root.validate_credentials()

                    Label: 
                        id: error_label 
                        text: '' 
                        color: 1, 0, 0, 1  # Merah  

<PoliBox>: # Tampilan Poli Beranda Pasien !!
    orientation: 'horizontal'
    spacing: 5
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: root.poli_name  # Menampilkan nama poli
        size_hint_x: 0.2
        bold: True
        color: 0, 0, 0, 1
    
    Label:
        text: root.status_text  # Menampilkan status dalam bentuk teks
        size_hint_x: 0.2
        color: (0, 0.7, 0, 1) if root.is_available else (0.7, 0, 0, 1)  # warna tulisan "Tersedia" dan "Tidak Tersedia"

<HomeScreen>: # Tampilan Beranda Pasien !!
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: 500  # Lebar diperkecil
            height: 600  # Tinggi diperkecil
            padding: 20
            spacing: 15  # Menambah jarak antar elemen

            # Header dengan logo dan tulisan Beranda
            BoxLayout:
                size_hint_y: None
                height: 80  # Menambah tinggi untuk header
                orientation: 'horizontal'
                padding: [20, 10]  # Jarak antar logo dan teks
                spacing: 10

                Image:
                    source: 'path_to_your_logo.png'  # Ganti dengan path gambar logo Anda
                    size_hint: None, None
                    size: 50, 50  # Ukuran logo
                    pos_hint: {'center_y': 0.5}  # Posisikan di tengah secara vertikal

                Label:
                    text: 'Beranda'
                    font_size: '24sp'  # Ukuran font lebih besar
                    bold: True
                    color: 0, 0, 0, 1
                    valign: 'middle'
                    text_size: self.size

                Widget:  # Spacer
                    size_hint_x: 1

            # Spacer untuk jarak antara header dan teks di bawah header
            Widget:
                size_hint_y: None
                height: 20  # Jarak antara header dan teks

            # Teks di bawah header
            Label:
                text: 'APLIKASI ANTRIAN\nONLINE PUSKESMAS'
                font_size: '24sp'
                bold: True
                color: 0.3, 0.3, 0.3, 1
                halign: 'center'
                size_hint_y: None
                height: 70
                color: 0.2, 0.2, 0.2, 1

            # Spacer untuk jarak antara teks dan status poli
            Widget:
                size_hint_y: None
                height: 10

            # Status Poli Section
            BoxLayout:
                size_hint_y: None
                height: 250  # Ukuran tetap untuk grid poli diperkecil
                orientation: 'vertical'
                spacing: 20  # Menambah jarak antara judul dan grid

                Label:
                    text: 'Status Poli:'
                    size_hint_y: None
                    height: 40
                    font_size: '20sp'
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'center'
                    text_size: self.size  # Pusatkan teks

                GridLayout:
                    cols: 2
                    spacing: 15  # Jarak antar kotak poli diperkecil
                    padding: [10, 10]
                    size_hint_y: None
                    height: 180  # Ketinggian untuk kotak-kotak poli diperkecil

                    PoliBox:
                        id: poli_a
                        poli_id: 'A'

                    PoliBox:
                        id: poli_b
                        poli_id: 'B'

                    PoliBox:
                        id: poli_c
                        poli_id: 'C'

                    PoliBox:
                        id: poli_d
                        poli_id: 'D'

            # Spacer untuk mendorong tombol ke bawah
            Widget:
                size_hint_y: None
                height: 30

            # Tombol Ambil Antrian
            BoxLayout:
                size_hint_y: None
                height: 80  # Lebih tinggi untuk ruang tombol
                orientation: 'vertical'
                spacing: 10
                padding: [20, 10]

                Button:
                    text: 'Ambil Nomor Antrian'
                    size_hint: 0.8, None  # Mengatur lebar 80% dari induk
                    height: 50  # Tinggi tombol lebih besar
                    font_size: '18sp'
                    background_color: 0.2, 0.6, 1, 1
                    pos_hint: {'center_x': 0.5}  # Posisikan di tengah
                    on_press: app.root.current = 'takethequeue'

            # Spacer antara tombol dan navigation bar
            Widget:
                size_hint_y: None
                height: 20

            # Navigation Bar sebagai footer
            BoxLayout:
                size_hint_y: None
                height: 60  # Ketinggian navigation bar yang sesuai
                spacing: 10

                Button:
                    text: 'Beranda'
                    font_size: '14sp'
                    on_press: app.root.current = 'home'
                Button:
                    text: 'Antrian'
                    font_size: '14sp'
                    on_press: app.root.current = 'information'
                Button:
                    text: 'Notifikasi'
                    font_size: '14sp'
                    on_press: app.root.current = 'notification'
                Button:
                    text: 'Riwayat'
                    font_size: '14sp'
                    on_press: app.root.current = 'history'
                Button:
                    text: 'Profil'
                    font_size: '14sp'
                    on_press: app.root.current = 'profil'

<TakeTheQueueScreen>: # Tampilan Ambil Antrian !!
    BoxLayout:
        orientation: 'vertical'

        # Header Section di bagian atas
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70
            padding: [10, 10]

            Button:
                size_hint_x: None
                width: 50
                background_normal: ''
                background_color: 1, 1, 1, 0  # Transparan
                on_press: root.go_back()

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Warna putih
                    Ellipse:
                        pos: self.x - 2, self.center_y - self.width / 2 - 2
                        size: self.width + 4, self.width + 4  # Lingkaran

                Image:
                    source: 'Image/ButtonBack.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: 28, 28

            Widget:  # Spacer
                size_hint_x: 0.05  # Tambahkan sedikit jarak antara tombol dan teks

            Label:
                text: 'Ambil Antrian'
                font_size: '24sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                valign: 'middle'
                size_hint_x: 0.01  # Mengatur ukuran agar berada di tengah antara tombol dan pinggir kanan

            Widget:  # Spacer untuk memposisikan teks di tengah
                size_hint_x: 0.15

        # Spacer between header and form content
        Widget:
            size_hint_y: None
            height: 20

        # Form Fields (Centralized)
        BoxLayout:
            orientation: 'vertical'
            padding: [20, 20]
            spacing: 10
            size_hint_y: None
            height: 350  # Adjust the height to control how much space the form takes up
            pos_hint: {"center_y": 0.5}  # Centralize form content vertically

            Label:
                text: 'Nama Lengkap'
                size_hint_y: None
                height: 30
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'  # Agar teks berada di kiri
                valign: 'middle'
                text_size: self.size  # Agar alignment bekerja dengan baik

            TextInput:
                multiline: False
                size_hint_y: None
                height: 40
                background_normal: ''
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                padding: [10, 10]  # Tambahkan padding dalam TextInput

            Label:
                text: 'Keluhan'
                size_hint_y: None
                height: 30
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'  # Agar teks berada di kiri
                valign: 'middle'
                text_size: self.size  # Agar alignment bekerja dengan baik

            TextInput:
                multiline: True
                size_hint_y: None
                height: 80
                background_normal: ''
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                padding: [10, 10]  # Tambahkan padding dalam TextInput

            Label:
                text: 'Poli'
                size_hint_y: None
                height: 30
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'  # Agar teks berada di kiri
                valign: 'middle'
                text_size: self.size  # Agar alignment bekerja dengan baik

            Spinner:
                text: 'Pilih'
                values: ['Poli Umum', 'Poli Gigi', 'Poli Anak']
                size_hint_y: None
                height: 40
                background_normal: ''
                background_color: 0.9, 0.9, 0.9, 1  # Warna abu-abu muda untuk memberi kesan interaktif
                color: 0.2, 0.2, 0.2, 1
                border: [1, 1, 1, 1]  # Tambahkan border untuk tampilan lebih jelas

        # Spacer to push buttons down
        Widget:
            size_hint_y: None
            height: 20

        # Action Buttons
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70  # Sesuaikan tinggi agar lebih proporsional
            padding: [20, 0]  # Tambahkan padding di sisi kiri dan kanan

            Button:
                text: 'AMBIL'
                size_hint_x: 0.45  # Lebar tombol 45%
                size_hint_y: None
                height: 50  # Tinggi tombol
                background_normal: ''
                background_color: 0.2, 0.6, 1, 1
                on_press: root.ambil_antrian()

            # Spacer between buttons
            Widget:
                size_hint_x: 0.1  # Spacer 10% dari lebar

            Button:
                text: 'BATAL'
                size_hint_x: 0.45  # Lebar tombol 45%
                size_hint_y: None
                height: 50  # Tinggi tombol
                background_normal: ''
                background_color: 0.7, 0.7, 0.7, 1
                on_press: root.cancel()

        # Spacer at the bottom
        Widget:
            size_hint_y: 0.3
