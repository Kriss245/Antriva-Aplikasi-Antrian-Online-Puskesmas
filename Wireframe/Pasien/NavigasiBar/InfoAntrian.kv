<InfoQueueScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        
        # Main Content
        BoxLayout:
            orientation: 'vertical'
            padding: [20, 20, 20, 20]
            spacing: 20
            
            # Header Info Antrian
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 60
                padding: [10, 10]
                pos_hint: {'top': 1}
                spacing: 5

                Image:
                    source: 'Image/Queue.png'
                    size_hint: None, None
                    size: 40, 40
                    color: 0.2, 0.2, 0.2, 0.6

                Label:
                    text: 'Info Antrian'
                    font_size: '20sp'
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    halign: 'left'
                    valign: 'middle'
                    size_hint_x: None
                    width: self.texture_size[0] + dp(10)
                    text_size: None, self.height

            # Top Divider line
            BoxLayout:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            # Nomor Antrian Poli Section
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 100  # Adjust height as necessary
                
                Label:
                    text: 'Nomor Antrian Saat Ini:'
                    font_size: '16sp'
                    color: 0.3, 0.3, 0.3, 1
                    halign: 'center'
                    size_hint_y: None
                    height: 40

                Label:
                    id: current_queue_label
                    text: '000'
                    font_size: '40sp'
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    halign: 'center'
                    size_hint_y: None
                    height: 60

            # Divider line
            BoxLayout:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            # Nomor Antrian Anda Section
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 100  
                
                Label:
                    text: 'Nomor Antrian Anda:'
                    font_size: '16sp'
                    color: 0.3, 0.3, 0.3, 1
                    halign: 'center'
                    size_hint_y: None
                    height: 40

                Label:
                    id: your_queue_label
                    text: '000'
                    font_size: '40sp'
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    halign: 'center'
                    size_hint_y: None
                    height: 60

            # Divider line
            BoxLayout:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Widget:
                size_hint_y: 0.2

            # Estimasi Waktu Section
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 60
                padding: [10, 10]
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    id: estimated_time_label
                    text: 'ESTIMASI WAKTU 00:00'
                    font_size: '16sp'
                    color: 0.9, 0.9, 0.9, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

            Widget:
                size_hint_y: 1 

        # Footer Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10, 10]
            spacing: 20
                    
            Button:
                text: 'Beranda'
                font_size: '14sp'
                on_press: app.root.current = 'home'
            Button:
                text: 'Antrian'
                font_size: '14sp'
                on_press: app.root.current = 'information'
            Button:
                text: 'Notifikasi'
                font_size: '14sp'
                on_press: app.root.current = 'notification'
            Button:
                text: 'Riwayat'
                font_size: '14sp'
                on_press: app.root.current = 'history'
            Button:
                text: 'Profil'
                font_size: '14sp'
                on_press: app.root.current = 'profil'
