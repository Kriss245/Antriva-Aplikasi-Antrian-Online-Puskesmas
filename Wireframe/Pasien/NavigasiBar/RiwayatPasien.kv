<HistoryScreen>: # Tampilan Riwayat Pasien
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # Light gray background
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 70  # Height for the header
        padding: [10, 10]
        pos_hint: {'top': 1}
        spacing: 5

        Image:
            # source: 'path_to_logo.png'
            size_hint: None, None
            size: 40, 40
            color: 0.15, 0.15, 0.15, 0.15

        Label:
            text: 'Riwayat'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            size_hint_x: None  # Mengatur lebar label
            width: self.texture_size[0] + dp(10)  # Lebar sesuai teks + sedikit padding
            text_size: None, self.height  # Memastikan teks tetap di tengah vertikal

    # Main Content Section (Table)
    ScrollView:  # Add scroll view to handle content overflow
        size_hint: (1, None)
        height: 400  # Adjusted height for content
        GridLayout:
            cols: 4
            row_default_height: 40
            size_hint_y: None
            height: self.minimum_height
            spacing: [1, 1]  # Spacing for table borders
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Gray border color
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1

            # Table headers
            Label:
                text: 'No'
                bold: True
                color: 0.0, 0.0, 0.0, 1  # Black text
            Label:
                text: 'lorem'
                bold: True
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: 'ipsum'
                bold: True
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: 'dolor'
                bold: True
                color: 0.0, 0.0, 0.0, 1

            # Table Content Rows (adjustable data)
            Label:
                text: '1'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1

            Label:
                text: '2'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1

            Label:
                text: '-'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1

            Label:
                text: '-'
                color: 0.0, 0.0, 0.0, 1
            Label:
                text: '---'
                color: 0.0, 0.0, 0.0, 1
            Label:
