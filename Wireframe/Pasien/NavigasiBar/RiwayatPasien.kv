    # Footer Section (already positioned correctly)
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        spacing: 20
        Button:
            text: 'Beranda'
            font_size: '14sp'
            on_press: app.root.current = 'home'
        Button:
            text: 'Antrian'
            font_size: '14sp'
            on_press: app.root.current = 'information'
        Button:
            text: 'Notifikasi'
            font_size: '14sp'
            on_press: app.root.current = 'notification'
        Button:
            text: 'Riwayat'
            font_size: '14sp'
            on_press: app.root.current = 'history'
