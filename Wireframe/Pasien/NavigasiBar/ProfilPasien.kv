<ProfilScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Header Section - Fixed at top
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: 60
            pos_hint: {'top': 1}
            padding: [10, 10]
            spacing: 5

            Image:
                source: 'Image/Profile.png'
                size_hint: None, None
                size: 40, 40
                color: 0.2, 0.2, 0.2, 0.6

            Label:
                text: 'Profil'
                font_size: '20sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'
                size_hint_x: None  # Mengatur lebar label
                width: self.texture_size[0] + dp(10)  # Lebar sesuai teks + sedikit padding
                text_size: None, self.height  # Memastikan teks tetap di tengah vertikal

        # Content wrapper with automatic centering
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 1, None
            height: 450  # You can adjust this height based on the content
            pos_hint: {'center_y': 0.55}
            
            # Main Content Container
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [10, 10]
                spacing: 5

                # Profile Picture Section
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    padding: [0, 0]

                    Widget:
                        size_hint_y: None
                        height: 130
                        canvas.before:
                            Color:
                                rgba: 0.15, 0.15, 0.15, 0.15
                            Ellipse:
                                # source: 'profile_placeholder.png'
                                pos: self.center_x - 65, self.center_y + 65
                                size: 130, 130
                               
                # Information Section
                GridLayout:
                    cols: 2
                    row_default_height: 40  # Meningkatkan tinggi baris untuk menambah jarak vertikal antar teks
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 12  # Menambah spasi antar teks (horizontal)
                    padding: [40, 0]  # Menambah padding untuk memberi jarak lebih dari sisi window

                    # NIK
                    Label:
                        text: 'NIK'
                        font_size: '16sp' 
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.35  

                    Label:
                        id: nik_label
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.65  

                    # Nama
                    Label:
                        text: 'Nama'
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.35

                    Label:
                        id: name_label
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.65

                    # Email
                    Label:
                        text: 'Email'
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.35

                    Label:
                        id: email_label
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.65

                    # No. Telp
                    Label:
                        text: 'No. Telp'
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.35

                    Label:
                        id: phone_label
                        font_size: '16sp'  
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.65

                    # Alamat
                    Label:
                        text: 'Alamat'
                        font_size: '16sp'  # Memperbesar ukuran teks
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.35

                    Label:
                        id: address_label
                        font_size: '16sp'  # Memperbesar ukuran teks
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        size_hint_x: 0.65

        # Footer Section - Fixed at bottom
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: 60
            pos_hint: {'y': 0}
            padding: [10, 10]
            spacing: 20

            Button:
                text: 'Beranda'
                font_size: '14sp'
                on_press: app.root.current = 'home'
            Button:
                text: 'Antrian'
                font_size: '14sp'
                on_press: app.root.current = 'information'
            Button:
                text: 'Notifikasi'
                font_size: '14sp'
                on_press: app.root.current = 'notification'
            Button:
                text: 'Riwayat'
                font_size: '14sp'
                on_press: app.root.current = 'history'
            Button:
                text: 'Profil'
                font_size: '14sp'
                on_press: app.root.current = 'profil'
