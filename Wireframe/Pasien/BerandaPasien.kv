<PoliBox>:
    orientation: 'horizontal'
    spacing: 5
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: root.poli_name  # Menampilkan nama poli
        size_hint_x: 0.2
        bold: True
        color: 0, 0, 0, 1
    
    Label:
        text: root.status_text  # Menampilkan status dalam bentuk teks
        size_hint_x: 0.2
        color: (0, 0.7, 0, 1) if root.is_available else (0.7, 0, 0, 1)  # warna tulisan "Tersedia" dan "Tidak Tersedia"

<QueueScreen>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    # Header
    BoxLayout:
        size_hint_y: 0.15
        Label:
            text: 'APLIKASI ANTRIAN\nONLINE PUSKESMAS'
            halign: 'center'
            font_size: '20sp'
            bold: True
            color: 0, 0, 0, 1

    # Status Poli Section
    BoxLayout:
        size_hint_y: 0.45
        orientation: 'vertical'
        spacing: 10
        
        Label:
            text: 'Status Poli:'
            size_hint_y: 0.2
            halign: 'left'
            font_size: '18sp'
            bold: True
            color: 0, 0, 0, 1
        
        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: 0.8
            
            PoliBox:
                id: poli_a
                poli_id: 'A'
            
            PoliBox:
                id: poli_b
                poli_id: 'B'
            
            PoliBox:
                id: poli_c
                poli_id: 'C'
            
            PoliBox:
                id: poli_d
                poli_id: 'D'

    # Ambil Antrian Button
    BoxLayout:
        size_hint_y: 0.2
        orientation: 'vertical'
        spacing: 10
        padding: [20, 10]

        Button:
            text: 'Ambil Nomor Antrian'
            size_hint: 0.8, None # Mengatur lebar 80% dari induk
            font_size: '18sp'
            background_color: 0.2, 0.6, 1, 1
            pos_hint: {'center_x': 0.5}  # Posisikan di tengah
            on_press: 
                print('Navigate to antrian screen')  # Status tombol telah ditekan
        
        # Spacer at bottom
        Widget:
            size_hint_y: None
            height: 20

    # Navigation Bar
    BoxLayout:
        size_hint_y: 0.1
        spacing: 10
        Button:
            text: 'Beranda'
        Button:
            text: 'Antrian'
        Button:
            text: 'Notifikasi'
        Button:
            text: 'Riwayat'
        Button:
            text: 'Profil'
