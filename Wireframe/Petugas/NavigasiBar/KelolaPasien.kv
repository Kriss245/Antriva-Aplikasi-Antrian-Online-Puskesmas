<KelolaPasienScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10, 10]
            pos_hint: {'top': 1}
            spacing: 5
            Image:
                source: 'Image/ManagePatient.png'
                size_hint: None, None
                size: 40, 40
                pos_hint: {'center_y': 0.5}
                color: 0.2, 0.2, 0.2, 0.6

            Label:
                text: 'Kelola Pasien'
                font_size: '20sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'
                size_hint_x: None
                width: self.texture_size[0] + dp(10)
                text_size: None, self.height

        # Konten Utama
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Teks Judul
            Label:
                text: 'Data Pasien'
                font_size: '22sp'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: '40dp'
                halign: 'center'
                text_size: self.size

            # Tombol Tambah Pasien
            BoxLayout:
                size_hint_y: None
                height: '50dp'
                padding: '10dp'

                Button:
                    text: '+ Tambah Pasien'
                    size_hint_x: None
                    width: '160dp'
                    pos_hint: {'left': 0.5}
                    background_color: 0.2, 0.6, 1, 1
                    on_press: app.root.current = 'tambah_pasien'

            # Header Tabel
            GridLayout:
                cols: 5  
                size_hint_y: None
                height: 50
                padding: [2, 0]
                spacing: [1, 0]
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1

                Label:
                    text: 'No'
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                    font_size: '12sp'
                Label:
                    text: 'Nama\nLengkap'
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    padding_x: dp(10)
                    font_size: '12sp'
                Label:
                    text: 'Email'
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    padding_x: dp(15)
                    font_size: '12sp'
                Label:
                    text: 'Aksi'
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                    padding_x: dp(10)
                    font_size: '12sp'
                Label:
                    text: 'Detail\nPasien'
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                    font_size: '12sp'

            # Scroll Isi Tabel
            ScrollView:
                size_hint: (1, 0.6)
                pos_hint: {'top' : 0.74}
                do_scroll_x: False
                do_scroll_y: True
                spacing: 0
                padding: 0

                GridLayout:
                    id: patient_grid
                    cols: 5
                    row_default_height: '80dp'  
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: [1, 0]
                    padding: [2, 0]
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 1


        # Navigation Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10, 10]
            spacing: 20

            Button:
                text: 'Beranda'
                font_size: '14sp'
                on_press: app.root.current = 'beranda_petugas'
            Button:
                text: 'Info Antrian'
                font_size: '14sp'
                on_press: app.root.current = 'informasi_antrian'
            Button:
                text: 'Kelola Pasien'
                font_size: '14sp'
                on_press: app.root.current = 'kelola_pasien'