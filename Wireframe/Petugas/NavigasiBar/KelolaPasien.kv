<KelolaPasienScreen>:  # Tampilan Kelola Pasien
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Header Section
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: '10dp'
            spacing: '5dp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                size_hint: None, None
                size: '40dp', '40dp'
                pos_hint: {'center_y': 0.5}

            Label:
                text: 'Kelola Pasien'
                font_size: '20sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_x: 1

        # Content Area
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Title
            Label:
                text: 'Lorem Ipsum dolor sit amet'
                font_size: '22sp'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: '40dp'
                halign: 'center'
                text_size: self.size

            # Add Patient Button
            BoxLayout:
                size_hint_y: None
                height: '50dp'
                padding: '10dp'

                Button:
                    text: '+ Tambah Pasien'
                    size_hint_x: None
                    width: '160dp'
                    pos_hint: {'left': 0.5}
                    on_press: root.tambah_pasien()

            # Table Header
            GridLayout:
                cols: 5
                size_hint_y: None
                height: '40dp'
                padding: [5, 5]
                spacing: [1, 1]
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1

                Label:
                    text: 'No'
                    bold: True
                    color: 0, 0, 0, 1
                Label:
                    text: 'lorem'
                    bold: True
                    color: 0, 0, 0, 1
                Label:
                    text: 'ipsum'
                    bold: True
                    color: 0, 0, 0, 1
                Label:
                    text: 'dolor'
                    bold: True
                    color: 0, 0, 0, 1
                Label:
                    text: 'Aksi'
                    bold: True
                    color: 0, 0, 0, 1

            # Scrollable Content
            ScrollView:
                size_hint: (1, 0.7)
                do_scroll_x: False
                do_scroll_y: True

                GridLayout:
                    cols: 5
                    row_default_height: '40dp'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: [1, 1]
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 1

                    # Dynamic content generation example
                    # Replace this with data-driven row creation
                    Label:
                        text: '1'
                        color: 0, 0, 0, 1
                    Label:
                        text: '--'
                        color: 0, 0, 0, 1
                    Label:
                        text: '--'
                        color: 0, 0, 0, 1
                    Label:
                        text: '--'
                        color: 0, 0, 0, 1
                    Button:
                        text: 'Kelola'
                        font_size: '12sp'
                        on_press: root.kelola(1)

                    Label:
                        text: '2'
