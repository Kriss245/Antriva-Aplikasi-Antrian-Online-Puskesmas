                        text: 'Kelola'
                        font_size: '12sp'
                        on_press: root.kelola(4)

        # Navigation Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10, 10]
            spacing: 20

            Button:
                text: 'Beranda'
                font_size: '14sp'
                on_press: app.root.current = 'home'
            Button:
                text: 'Info Antrian'
                font_size: '14sp'
                on_press: app.root.current = 'information'
