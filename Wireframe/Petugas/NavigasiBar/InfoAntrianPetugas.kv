<InfoAntrianScreen>:
    orientation: 'vertical'
    
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # Light gray background
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        pos_hint: {'top': 1}  # Pastikan header di atas
        spacing: 5  # Mengurangi jarak antara logo dan teks

        Image:
            # source: 'path_to_your_logo.png'  # Ganti dengan path logo
            size_hint: None, None
            size: 40, 40  # Ukuran logo
            pos_hint: {'center_y': 0.5}  # Posisikan di tengah secara vertikal
            color: 0.15, 0.15, 0.15, 0.15

        Label:
            text: 'Info Antrian'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            size_hint_x: None
            width: self.texture_size[0] + dp(10)
            text_size: None, self.height

    # Main Content Section (Table)
    ScrollView:  # Memastikan tabel ditampilkan secara konsisten seperti di HistoryScreen
        size_hint: (1, 0.7)  # Mengatur ketinggian konten agar lebih ke atas
        pos_hint: {'top': 0.9}
        GridLayout:
            cols: 4
            row_default_height: 40
            size_hint_y: None
            height: self.minimum_height
            spacing: [1, 1]
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1

            # Table headers
            Label:
                text: 'No'
                bold: True
                color: 0, 0, 0, 1
            Label:
                text: 'lorem'
                bold: True
                color: 0, 0, 0, 1
            Label:
                text: 'ipsum'
                bold: True
                color: 0, 0, 0, 1
            Label:
                text: 'dolor'
                bold: True
                color: 0, 0, 0, 1

            # Table Content Rows
            Label:
                text: '1'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1

            Label:
                text: '2'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1

            Label:
                text: '-'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1

            Label:
                text: '-'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1
            Label:
                text: '--'
                color: 0, 0, 0, 1

    # Footer Navigation Bar
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        spacing: 20
        Button:
            text: 'Beranda'
            font_size: '14sp'
            on_press: app.root.current = 'home'
        Button:
            text: 'Info Antrian'
            font_size: '14sp'
            on_press: app.root.current = 'information'
        Button:
            text: 'Kelola Pasien'
            font_size: '14sp'
            on_press: app.root.current = 'kelola'