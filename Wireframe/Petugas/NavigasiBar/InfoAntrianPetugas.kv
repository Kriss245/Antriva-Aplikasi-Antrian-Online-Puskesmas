<InformasiAntrianScreen>: # Tampilan Informasi Antrian Pasien (Petugas) !!
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  
        Rectangle:
            pos: self.pos
            size: self.size

    # Header 
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        pos_hint: {'top': 1}  
        spacing: 5  

        Image:
            source: 'Image/Queue.png'
            size_hint: None, None
            size: 40, 40  
            pos_hint: {'center_y': 0.5}  
            color: 0.2, 0.2, 0.2, 0.6

        Label:
            text: 'Info Antrian'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            size_hint_x: None
            width: self.texture_size[0] + dp(10)
            text_size: None, self.height

    # Teks Judul
    Label:
        text: 'Informasi Antrian Pasien'
        font_size: '22sp'
        color: 0, 0, 0, 1
        size_hint_y: None
        height: '40dp'
        pos_hint: {'top': 0.95}
        halign: 'center'
        text_size: self.size

    # Tombol Panggil Pasien
    BoxLayout:
        size_hint_y: None
        height: '50dp'
        padding: '10dp'
        pos_hint: {'top': 0.875}

        Button:
            text: 'Panggil Pasien'
            size_hint_x: None
            width: '160dp'
            pos_hint: {'left': 0.5}
            on_press: root.panggil_pasien()

    # Konten Tabel
    GridLayout:
        cols: 5
        size_hint_y: None
        height: 50
        pos_hint: {'top': 0.8}
        padding: [5, 5]
        spacing: 5
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Line:
                rectangle: self.x, self.y, self.width, self.height
                width: 1

        # Header Tabel
        Label:
            text: 'No'
            bold: True
            color: 0, 0, 0, 1
            size_hint_x: 0.1
            font_size: '12sp'
        Label:
            text: 'Nama Lengkap'
            bold: True
            color: 0, 0, 0, 1
            size_hint_x: 0.3
            font_size: '12sp'
        Label:
            text: 'Tanggal\nAntrian'
            bold: True
            color: 0, 0, 0, 1
            size_hint_x: 0.2
            font_size: '12sp'
        Label:
            text: 'Status'
            bold: True
            color: 0, 0, 0, 1
            size_hint_x: 0.2
            font_size: '12sp'
        Label:
            text: 'Detail\nAntrian'
            bold: True
            color: 0, 0, 0, 1
            size_hint_x: 0.2
            font_size: '12sp'

    # Scroll Isi Tabel
    ScrollView:
        size_hint: (1, 0.6)
        pos_hint: {'top': 0.74}
        GridLayout:
            id: tabel_antrian
            cols: 5
            row_default_height: 45
            size_hint_y: None
            height: self.minimum_height
            spacing: [5, 2]
            padding: [5, 5]
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1

    # Footer Navigasi Bar
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        spacing: 20
        Button:
            text: 'Beranda'
            font_size: '14sp'
            on_press: app.root.current = 'beranda_petugas'
        Button:
            text: 'Info Antrian'
            font_size: '14sp'
            on_press: app.root.current = 'informasi_antrian'
        Button:
            text: 'Kelola Pasien'
            font_size: '14sp'
            on_press: app.root.current = 'kelola_pasien'
