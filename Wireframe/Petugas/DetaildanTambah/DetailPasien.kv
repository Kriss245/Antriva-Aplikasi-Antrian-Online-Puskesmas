<DetailPasienScreen>: # Tampilan Detail Pasien (Petugas) !!
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  
            Rectangle:
                pos: self.pos
                size: self.size

        # Header 
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70
            padding: [10, 10]

            # Tombol Kembali
            Button:
                size_hint_x: None
                width: 50
                background_normal: ''
                background_color: 1, 1, 1, 0  
                on_press: root.kembali()

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  
                    Ellipse:
                        pos: self.x - 2, self.center_y - self.width / 2 - 2
                        size: self.width + 4, self.width + 4  

                Image:
                    source: 'Image/ButtonBack.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: 28, 28

            Widget:
                size_hint_x: 0.05

            # Teks Judul Detail Pasien
            Label:
                text: 'Detail Pasien'
                font_size: '24sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                valign: 'middle'
                size_hint_x: 0.1  

            Widget:
                size_hint_x: 0.1

        Widget:
            size_hint_y: None
            height: 20

        # Isi Konten Detail Pasien
        GridLayout:
            cols: 2
            padding: [20, 20]
            spacing: [10, 10]
            size_hint_y: None
            row_default_height: 30
            pos_hint: {"center_y": 0.5}  

            # Email
            Label:
                text: 'Email'
                font_size: '16sp'
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            Label:
                id: email_label
                font_size: '16sp'
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            # NIK
            Label:
                text: 'NIK'
                font_size: '16sp'
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            Label:
                id: nik_label
                font_size: '16sp'
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size
            
            # Nama 
