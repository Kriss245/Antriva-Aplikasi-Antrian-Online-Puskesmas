<DetailAntrianScreen>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Header
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        pos_hint: {'top': 1}  
        spacing: 5  

        Image:
            # source: 'path_to_your_logo.png'  
            size_hint: None, None
            size: 40, 40  
            pos_hint: {'center_y': 0.5}  
            color: 0.15, 0.15, 0.15, 0.15

        Label:
            text: 'Info Antrian'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            size_hint_x: None
            width: self.texture_size[0] + dp(10)
            text_size: None, self.height

    # Main Content
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 10]
        spacing: 20  

        Widget:
            size_hint_y: 0.2

        # Title for Detail Antrian
        Label:
            text: 'Detail Antrian Pasien'
            font_size: '24sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: 40

        # Queue Number Section with Top and Bottom Lines
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 0]
            
            Widget:
                size_hint_y: 0.2

            # Top Divider line
            BoxLayout:
                size_hint_y: None
                height: 1
                canvas.before:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1
                    Rectangle:
                        pos: self.x, self.top - 1  # Slightly adjust to draw right above the content
                        size: self.width, 1

            Label:
                text: 'No Antrian Pasien'
                font_size: '20sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: 40

            Label:
                text: '019'
                font_size: '36sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: 80

                canvas.after:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1
                    Rectangle:
                        pos: self.x, self.y
                        size: self.width, 1

        # Content for NIK, Queue Date, and Poli
        BoxLayout:
            orientation: 'vertical'
            spacing: 10  
            padding: [20, 0]

            Label:
                text: 'NIK\nLorem ipsum dolor sit amet'
                font_size: '18sp'
                color: 0.3, 0.3, 0.3, 1
                halign: 'left'  
                valign: 'middle'
                size_hint_y: None
                height: 50

            Label:
                text: 'TGL ANTRIAN\nLorem-ipsum dolor sit amet'
                font_size: '18sp'
                color: 0.3, 0.3, 0.3, 1
                halign: 'left' 
                valign: 'middle'
                size_hint_y: None
                height: 50
            
            Label:
                text: 'POLI\nLorem ipsum dolor sit amet'
                font_size: '18sp'
                color: 0.3, 0.3, 0.3, 1
                halign: 'left' 
                valign: 'middle'
                size_hint_y: None
                height: 50

        # Buttons for Complete and Cancel Service
        BoxLayout:
            orientation: 'vertical'
            padding: [20, 10]
            spacing: 10

            Button:
                text: 'PELAYANAN SELESAI'
                size_hint_y: None
                height: 45
                background_color: 0.3, 0.5, 0.8, 1
                on_press: root.pelayanan_selesai()

            Button:
                text: 'PELAYANAN DIBATALKAN'
                size_hint_y: None
                height: 45
                background_color: 0.8, 0.2, 0.2, 1
                on_press: root.pelayanan_dibatalkan()
