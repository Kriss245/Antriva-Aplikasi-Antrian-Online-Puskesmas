<TambahPasienScreen>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  
        Rectangle:
            pos: self.pos
            size: self.size

    # Header 
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        pos_hint: {'top': 1}
        spacing: 5
        Image:
            # source: 'gambar.png'
            size_hint: None, None
            size: 40, 40
            pos_hint: {'center_y': 0.5}
            color: 0.15, 0.15, 0.15, 0.15

        #Teks Judul Tambah Pasien
        Label:
            text: 'Tambah Pasien'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            size_hint_x: None
            width: self.texture_size[0] + dp(10)
            text_size: None, self.height
    
    # Formulir Tambah Pasien
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20]
        spacing: 10

        Label:
            text: 'Nama Lengkap'
            size_hint_y: None
            height: 30
            color: 0.2, 0.2, 0.2, 1

        TextInput:
            multiline: False
            size_hint_y: None
            height: 40
            background_normal: ''
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1

        Label:
            text: 'NIK'
            size_hint_y: None
            height: 30
            color: 0.2, 0.2, 0.2, 1

        TextInput:
            multiline: False
            size_hint_y: None
            height: 40
            background_normal: ''
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1

        Label:
            text: 'Jenis Kelamin'
            size_hint_y: None
            height: 30
            color: 0.2, 0.2, 0.2, 1

        Spinner:
            text: 'Pilih'
            values: ['Laki-laki', 'Perempuan']
            size_hint_y: None
            height: 40
            background_normal: ''
            background_color: 1, 1, 1, 1
            color: 0.2, 0.2, 0.2, 1

        Label:
            text: 'Alamat'
            size_hint_y: None
            height: 30
            color: 0.2, 0.2, 0.2, 1

        TextInput:
            multiline: True
            size_hint_y: None
            height: 80
            background_normal: ''
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1

        Label:
            text: 'No HP'
            size_hint_y: None
            height: 30
            color: 0.2, 0.2, 0.2, 1

        TextInput:
            multiline: False
            size_hint_y: None
            height: 40
            background_normal: ''
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1

    Widget:
        size_hint_y: None
        height: 20

    # Tombol Batal dan Simpan
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 70
        padding: [40, 20]
        spacing: 20

        Button:
            text: 'BATAL'
            background_normal: ''
            background_color: 0.7, 0.7, 0.7, 1
            on_press: root.batal()

        Button:
            text: 'SIMPAN'
            background_normal: ''
            background_color: 0.2, 0.6, 1, 1
            on_press: root.simpan()