<BerandaScreen>:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # Light gray background
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 70
        padding: 10

        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1  # Warna abu-abu muda untuk seluruh background header
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10, 10, 0, 0]  # Bagian atas kotak melengkung seperti di gambar

        Image:
            source: 'path_to_your_logo.png'  # Ganti dengan path logo
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_y': 0.5}

        Label:
            text: '   Beranda'
            font_size: '24sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            valign: 'middle'
            halign: 'left'
            size_hint_x: 1
            text_size: self.size  # Agar teks bisa align dengan benar

    # Main Content
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 10]
        spacing: 20

        Label:
            text: 'Selamat datang, Dokter Afifah!'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'center'
            valign: 'middle'

        Label:
            text: 'Lorem ipsum dolor sit amet'
            font_size: '16sp'
            color: 0.3, 0.3, 0.3, 1
            halign: 'center'
            valign: 'middle'

        BoxLayout:
            size_hint_y: None
            height: 150
            padding: [20, 10]

            Image:
                source: 'path_to_image_1.png'  # Replace with your image path
                allow_stretch: True
                keep_ratio: False

        BoxLayout:
            size_hint_y: None
            height: 150
            padding: [20, 10]

            Image:
                source: 'path_to_image_2.png'  # Replace with your image path
                allow_stretch: True
                keep_ratio: False

    # Footer Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 100  # Tinggi footer, bisa disesuaikan
        padding: [20, 10]
        spacing: 30

        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1  # Warna abu-abu muda untuk background footer
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [0, 0, 10, 10]  # Bagian bawah kotak melengkung

        # Tombol "Beranda"
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            Image:
                source: 'path_to_image_icon_beranda.png'  # Ganti dengan ikon yang sesuai
                size_hint: None, None
                size: 50, 50
                allow_stretch: True
                pos_hint: {'center_x': 0.5}

            Button:
                text: 'BERANDA'
                background_normal: ''
                background_color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: 40
                on_press: app.root.current = 'beranda'

        # Tombol "Info Antrian"
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            Image:
                source: 'path_to_image_icon_antrian.png'  # Ganti dengan ikon yang sesuai
                size_hint: None, None
                size: 50, 50
                allow_stretch: True
                pos_hint: {'center_x': 0.5}

            Button:
                text: 'INFO ANTRIAN'
                background_normal: ''
                background_color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: 40
                on_press: root.go_to_info_antrian()

        # Tombol "Kelola Pasien"
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            Image:
                source: 'path_to_image_icon_pasien.png'  # Ganti dengan ikon yang sesuai
                size_hint: None, None
                size: 50, 50
                allow_stretch: True
                pos_hint: {'center_x': 0.5}

            Button:
                text: 'KELOLA PASIEN'
                background_normal: ''
                background_color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: 40
                on_press: root.go_to_kelola_pasien()