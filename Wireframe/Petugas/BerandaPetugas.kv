<BerandaPetugasScreen>:  # Tampilan Beranda Petugas !!
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  
        Rectangle:
            pos: self.pos
            size: self.size

    # Header 
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        pos_hint: {'top': 1}
        spacing: 5
        Image:
            source: 'Image/Home.png'
            size_hint: None, None
            size: 40, 40
            pos_hint: {'center_y': 0.5}
            color: 0.2, 0.2, 0.2, 0.6
            
        Label:
            text: 'Beranda'
            font_size: '20sp'
            bold: True
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            size_hint_x: None
            width: self.texture_size[0] + dp(10)
            text_size: None, self.height

    BoxLayout:
        orientation: 'vertical'
        padding: [20, 0]

        Widget:
            size_hint_y: 0.3

        # Teks Selamat Datang 
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 5

            Label:
                text: 'Selamat Datang'
                font_size: '20sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                text: '"Aplikasi Antrian Online Puskesmas"'
                font_size: '16sp'
                color: 0.3, 0.3, 0.3, 1
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding: [0, 0, 0, 20]

        Widget:
            size_hint_y: 0.1

        # Kotak Pertama 
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 270
            padding: [15, 25, 15, 10]

            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.'
                text_size: self.width - dp(20), None
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                font_size: '20sp'
                padding_y: dp(60)  
                color: 0.3, 0.3, 0.3, 1

        Widget:
            size_hint_y: 0.1

        # Kotak Kedua
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 270
            padding: [15, 15]

            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            size_hint_y: 0.35

    # Footer Navigasi Bar
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 60
        padding: [10, 10]
        spacing: 20
        Button:
            text: 'Beranda'
            font_size: '14sp'
            on_press: app.root.current = 'beranda_petugas'
        Button:
            text: 'Info Antrian'
            font_size: '14sp'
            on_press: app.root.current = 'informasi_antrian'
        Button:
            text: 'KelolaPasien'
            font_size: '14sp'
            on_press: app.root.current = 'kelola_pasien'